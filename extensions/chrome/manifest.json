{
  "manifest_version": 2,

  "name": "Quantum.ai",
  "description": "Quantum Artifical Intelligence Google Chrome Extension",
  "version": "1.0",

  "icons": {
            "16": "common/icons/electronic_brain.png",
            "48": "common/icons/electronic_brain.png",
            "128": "common/icons/electronic_brain.png"
          },

  "browser_action": {
            "default_popup": "popup.html"
  },

  "background": {
          "scripts": ["background.js"]
        },

  "content_scripts": [
          {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["assets/jquery/jquery-3.1.1/jquery-3.1.1.min.js", "common/js/inject.js"],
            "run_at": "document_end",
            "all_frames": true,
            "match_about_blank": true
          }
  ],

  "web_accessible_resources": ["texteditor.html"],

  "permissions": [
     "contextMenus",
     "activeTab",
     "tabs",
     "clipboardRead",
     "<all_urls>"
   ]

}
